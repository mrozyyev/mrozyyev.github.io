---
import projectImage from '@assets/images/project.png';

import { Image } from '@astrojs/image/components';
import Tags from '@components/ui/Tags.astro';
interface Props {
	imgUrl?: string;
	url?: string;
	alt?: string;
	title?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	alt = 'Project image',
	title = 'Project title',
	tags = ['Tags'],
	imgUrl = 'https://mrozyyev.github.io/images/project.png',
} = Astro.props;

const placeholderImg = imgUrl ? imgUrl : projectImage;

console.log(placeholderImg);
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} target="_blank" aria-label="link to project">
			<div class="relative flex items-end justify-center overflow-hidden rounded-xl">
				<Image
					src={placeholderImg}
					alt={alt}
					fit="cover"
					aspectRatio="6:4"
					format="png"
					width={600}
					height={400}
					loading="eager"
				/>
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-xl text-orange lg:text-2xl">{title}</h3>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
